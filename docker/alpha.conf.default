# Default configuration file with RPC properly exposed to external connections
chain=alpha
daemon=0
debug=0
txindex=1

# Network-related settings
listen=1
bind=0.0.0.0
port=8590

# RPC settings (for API access)
server=1
rpcbind=0.0.0.0
rpcallowip=0.0.0.0/0
rpcuser=user
rpcpassword=password
rpcport=8589

# Performance tuning
randomxfastmode=1
dbcache=1000
maxmempool=300

# Logging settings
printtoconsole=1
logtimestamps=1
logips=1

[alpha]
adddnsseed=

[alphatestnet]
adddnsseed=